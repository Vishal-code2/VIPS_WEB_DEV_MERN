<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/index.css">
</head>
<body>
    <!-- <h1>Add New Products</h1> -->
    <nav>
        <a href="/products">Add New Products</a>
    </nav>
    
    <div class="container">
        <% products.forEach(elem => { %>
        <div class="card">
            <div class="top">
                <img src="<%= elem.image %>" alt="">
                
            </div>
            <div class="bottom">

                <a href="/products/<%= elem.id %>"><%= elem.title %></a>
                <p><%= elem.description %></p>
                <p><%= elem.category %></p>
                <h4><%= elem.price %></h4>
            </div>
        </div>
    <% }); %>
    </div>

    
    

</body>
</html>
